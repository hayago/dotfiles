" ファイルを上書きする前にバックアップファイルを作る
" set backup

" バックアップのディレクトリ
" set backupdir=~/.vim/vim_backup

" バックアップを取らない
set nobackup

" スワップファイルを使用する設定
" set swapfile

" スワップファイル用のディレクトリ名を、コンマで区切って指定する
" set directory=~/.vim/vim_swap

" スワップファイルを作らない
set noswapfile

" カラースキーマ
colorscheme molokai

" シンタックス
syntax on

" 行番号を表示
set number

" 改行時に自動でインデント
set autoindent

" タブ幅の設定
set expandtab
set shiftwidth=2
set tabstop=2
set softtabstop=2
