{
  "env": {
    "EDITOR": "nvim"
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git stash *)",
      "Bash(git reset *)",
      "Bash(git restore *)",
      "Bash(git tag *)",
      "Bash(git show *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  }
}
